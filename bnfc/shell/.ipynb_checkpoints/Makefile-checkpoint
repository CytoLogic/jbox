BNFC ?= bnfc
GRAMMAR := Grammar.cf
.PHONY: all gen build clean run ast
all: build
gen:
	$(BNFC) --c --make $(GRAMMAR)
build: gen
	$(MAKE)
run: build
	@echo "echo hello | grep h > out.txt" | ./Test
ast: build
	@echo "ls -l | grep cf" | ./Test
clean:
	@rm -f *.o *.tab.* lex.yy.c Test Parser.* Lexer.* Abs*.{c,h} Print*.{c,h} Test.c Skeleton.c
